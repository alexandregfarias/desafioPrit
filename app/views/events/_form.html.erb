<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Título", style: "display: block" %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label "Descrição", style: "display: block" %>
    <%= form.text_area :descricao %>
  </div>

  <div>
    <%= form.label "Data de início", style: "display: block" %>
    <%= form.date_field :data_inicio %>
  </div>

  <div>
    <%= form.label "Data de término", style: "display: block" %>
    <%= form.date_field :data_termino %>
  </div>

  <div>
    <%= form.submit "Criar evento" %>
  </div>
<% end %>
